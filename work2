<script type="text/javascript">
	//1.获取元素
  		var box=document.getElementById("box");
  		var img1=document.getElementById("img1");
  		var img2=document.getElementById("img2");
  		var slider=document.getElementById("slider");
  		var Bimg=document.getElementById("Bimg");
  		//2.为左侧的小图绑定鼠标移入、移出、移动事件
  		img1.onmouseover=function(){
  			slider.style.display="block";
  			img2.style.display="block";
  		}
  		img1.onmouseout=function(){
  			slider.style.display="none";
  			img2.style.display="none";
  		}
  		img1.onmousemove=function(ev){
  			var ev=ev||window.event;
  			//(1).根据鼠标位置计算放大镜位置
  			var left=ev.clientX-box.offsetLeft-slider.offsetWidth/2;
  			var top=ev.clientY-box.offsetTop-slider.offsetHeight/2;
  			var maxLeft=img1.offsetWidth-slider.offsetWidth;
  			var maxTop=img1.offsetHeight-slider.offsetHeight;
  			left=left>maxLeft?maxLeft:(left<0?0:left);
  			top=top>maxTop?maxTop:(top<0?0:top);
  			//(2).设置放大镜的位置
  			slider.style.left=left+"px";
  			slider.style.top=top+"px";
  			//(3).根据左侧放大镜的位置，计算右侧大图移动比例
  			var w=left/maxLeft;
  			var h=top/maxTop;
  			//(4).计算大图的最大移动范围
  			var BimgLeft=img2.offsetWidth-Bimg.offsetWidth;
  			var BimgTop=img2.offsetHeight-Bimg.offsetHeight;
  			//(5).计算大图的移动距离，设置位置
  			Bimg.style.left=w*BimgLeft+"px";
  			Bimg.style.top=h*BimgTop+"px";
  		}

	var img1=document.getElementById("img1").childNodes[1];
	var ml=document.getElementById("ml").firstChild;
	var button150=document.getElementById("button150");
	var button200=document.getElementById("button200");
	var num=document.getElementById("num");
	function jian(){
		num.value=num.value-1;
		console.log(num.value);
		while(num.value==0){
			num.value=0;
		}
	}
	function jia(){
		num.value=num.value-(-1);
		console.log(num.value);
		while(num.value>5){
			num.value=5;
		}
	}
	function show150(){
		var ml=document.getElementById("ml");
		ml.innerHTML="150ml";
		console.log(ml);
	}
	function show200(){
		var ml=document.getElementById("ml");
		ml.innerHTML="200ml";
		console.log(ml);
	}
	function showpp0(){
		img1.src="img/pp0.jpeg";
	}
	function showpp1(){
		img1.src="img/pp1.jpeg";
	}
</script>
